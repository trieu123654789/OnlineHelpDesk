@model OnlineHelpDesk2.Models.Request

@{
    ViewBag.Title = "ViewReason";
    Layout = null;
}
<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>View Reason</title>
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="../images/favicon.png">
    <meta name="description" content="" />
    <meta name="author" content="Tooplate" />
    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Additional CSS Files -->
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet" />
    <link rel="stylesheet" href="../Content/fontawesome.css" />
    <link rel="stylesheet" href="../Content/style2.css" />
    <link rel="stylesheet" href="../Content/css/owl.css" />
    <link rel="stylesheet" href="../Content/lightbox.css" />
    <style>
        body {
            font-family: 'Roboto', sans-serif;
            overflow-x: hidden;
            background-color: #4AA0DD;
            color: #fff;
        }

        #page-wraper {
            width: 100%;
            height: 100%;
            position: fixed;
            top: 0;
            left: 0;
            z-index: 1;
        }

        .container {
            max-width: 800px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            color: #fff;
        }

        .card {
            background-color: #fff;
            border-radius: 8px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            margin-top: 20px;
            width: 570px;
            margin: 0 auto
        }

        .card-body {
            padding: 20px;
        }

        table {
            width: 100%;
            margin-bottom: 1rem;
            background-color: transparent;
            border-collapse: collapse;
            color: #000;
        }

        th,
        td {
            padding: 0.75rem;
            text-align: left;
            border-bottom: 1px solid #dee2e6;
        }

        th {
            background-color: #f8f9fa;
        }

        tbody tr:hover {
            background-color: rgba(0, 123, 255, 0.1);
        }

        input[type="button"] {
            display: inline-block;
            padding: 10px 20px;
            text-decoration: none;
            color: #fff;
            background-color: #ff0000;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

            input[type="button"]:hover {
                background-color: #B80000;
            }
    </style>

</head>

<body>
    <div id="page-wraper">
        <div class="container">
            <h1>View Reason</h1>
            <div class="card">
                <div class="card-body">
                    <table class="table">
                        <tbody>
                            <tr>
                                <td>Request ID</td>
                                <td>@Model.RequestID</td>
                            </tr>
                            <tr>
                                <td>Request Date</td>
                                <td>@Model.RequestDate.ToString("dd/MM/yyyy")</td>
                            </tr>
                            <tr>
                                <td>Severity</td>
                                <td>@Model.SeverityLevels</td>
                            </tr>
                            <tr>
                                <td>Description</td>
                                <td>@Model.RequestContent</td>
                            </tr>
                            <tr>
                                <td>Reason</td>
                                <td><textarea class="form-control" id="ReasonForRefusal" name="ReasonForRefusal" rows="8" cols="45" readonly style="font-family:'Roboto', sans-serif; font-size: 16px;">@ViewBag.ReasonDescription</textarea></td>
                            </tr>
                        </tbody>
                    </table>
                    <div>
                        <input class="badge badge-btn2" onclick="location.href='@Url.Action("Index", "Enduser")'" type="button" value="Back" />
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

</html>

