@model OnlineHelpDesk2.Models.Request

@{
    ViewBag.Title = "ReplyToRequest";
    Layout = "~/Views/Shared/Assignee_LayoutPage.cshtml";
}
<div id="replyModal_@Model.RequestID">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header bg-primary text-white">
                <h4 class="modal-title">Enter Reply Content</h4>
            </div>
            <div class="modal-body">
                @using (Html.BeginForm("ReplyToRequest", "Assignee", FormMethod.Post, new { @class = "form-horizontal" }))
                {
                    @Html.AntiForgeryToken()
                    @Html.HiddenFor(model => model.RequestID)
                    <div class="form-group">
                        <label class="control-label col-sm-3" for="replyContent">Reply Content:</label>
                        <div class="col-sm-9">
                            @{
                                var replyContent = Model.Replies != null ? Model.Replies.FirstOrDefault()?.ReplyContent : "";
                            }

                            @Html.TextAreaFor(model => replyContent, new { @class = "form-control", rows = 3, required = "required" })

                        </div>
                    </div>

                    <div class="form-group">
                        <div class="col-sm-offset-3 col-sm-9">
                            <button type="submit" class="btn btn-success">Complete</button>
                            <button class="btn btn-danger" onclick="location.href='@Url.Action("Index", "Assignee")'">Cancel</button>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

