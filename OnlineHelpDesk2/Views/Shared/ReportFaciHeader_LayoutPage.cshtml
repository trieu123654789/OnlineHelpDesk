@{ Layout = null; }﻿
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no" />
    <title>Online Help Desk</title>
    <!-- favicon -->
    <link rel="shortcut icon" type="image/png" href="../images/favicon.png">
    <meta name="description" content="" />
    <meta name="author" content="Tooplate" />
    <!-- Bootstrap core CSS -->
    <link href="../vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <!-- Additional CSS Files -->
    <link href="https://fonts.googleapis.com/css?family=Lato:100,300,400,700,900" rel="stylesheet" />
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.12.9/umd/popper.min.js"></script>
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/js/bootstrap.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.0/dist/js/bootstrap.min.js"></script>
    <link rel="stylesheet" href="../Content/fontawesome.css" />
    <link rel="stylesheet" href="../Content/style.css" />
    <link rel="stylesheet" href="../Content/css/owl.css" />
    <link rel="stylesheet" href="../Content/lightbox.css" />

    <style>
        label {
            color: #000;
            font-weight: bold;
            margin-left: 3%;
        }

        select {
            margin-bottom: 10px;
            padding: 5px;
        }

        .table {
            width: 100%;
            max-width: 1100px;
            margin: 0 auto;
        }

        th, td {
            border: 1px solid #ddd;
            padding: 8px;
            text-align: left;
        }

        th {
            background-color: #f2f2f2;
        }

        input[type="checkbox"] {
            margin: 0;
        }
    </style>

</head>

<body>
    <div id="page-wraper">
        <!-- Sidebar Menu -->
        <div class="responsive-nav">
            <i class="fa fa-bars" id="menu-toggle"></i>
            <div id="menu" class="menu">
                <i class="fa fa-times" id="menu-close"></i>
                <div class="container">
                    <div class="image">
                        <a href="#"><img src="../images/logo1.jpg" alt="logo_OnlineHelpDesk" /></a>
                    </div>
                    <div class="author-content">
                        @if (ViewBag.FullName != null)
                        {
                            <h5 style="color: white; font-weight:bold">Hello, @ViewBag.FullName</h5>
                        }
                    </div>
                    <nav class="main-nav" role="navigation">
                        <ul class="main-menu">
                            <li><a href="@Url.Action("Index", "FaciHeader")">Unassigned Requests</a></li>
                            <li><a href="@Url.Action("RequestList", "FaciHeader")">Request List</a></li>
                            <li><a href="@Url.Action("DenyRequest", "FaciHeader")">Deny Request</a></li>
                            <li><a href="@Url.Action("Report", "FaciHeader")">View Monthly Report</a></li>
                            <li><a href="@Url.Action("Information", "FaciHeader")">Account Information</a></li>
                            <br />
                            @if (Session["AccountID"] != null)
                            {
                                <li>
                                    <form action="@Url.Action("Logout", "Home")" method="post">
                                        <input type="submit" value="Log out" class="btn btn-danger" />
                                    </form>
                                </li>
                            }
                        </ul>
                    </nav>

                    <div class="copyright-text">
                        <p>
                            Copyright 2023 OHD<br>
                            Design: Online Help Desk Team
                        </p>
                    </div>
                </div>
            </div>
        </div>

        <section class="section about-me" data-section="section1">
            <div class="container" style="width:1200px">

                <div class="section-heading">
                    <div class="img1">
                        <img src="../Images/bg1.jpg" width="770" height="300" / style="filter: brightness(80%);">
                    </div>
                    <div class="card">

                        <div class="card-body">


                            <div class="table-responsive">
                                <div>
                                    @RenderBody()
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

        </section>
    </div>
    <!-- Scripts -->
    <!-- Bootstrap core JavaScript -->
    <script src="vendor/jquery/jquery.min.js"></script>
    <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

    <script src="../assets/js/isotope.min.js"></script>
    <script src="../assets/js/owl-carousel.js"></script>
    <script src="../assets/js/lightbox.js"></script>
    <script src="../assets/js/custom.js"></script>

    <script>
        function updateRequestMonths() {
            var selectedMonth = $("#month").val();

            $("#noRequestsMessage").hide();

            $("#reportTable tbody tr").hide();

            $(".month-option.month-" + selectedMonth).show();

            var visibleRows = $(".month-option.month-" + selectedMonth + ":visible").length;

            if (visibleRows === 0) {
                $("#noRequestsMessage").show();
            }
        }
    </script>
</body>

</html>