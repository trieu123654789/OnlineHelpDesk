@model IEnumerable<OnlineHelpDesk2.Models.AccountList>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}

@if (Model.Any())
{
    <a href="@Url.Action("Create", "Admin")" class="badge badge-info">Create New Account</a>
    <br />
    <br />
    <table class="table" id="myTable" style="font-size: 12px;">
        <thead>
            <tr>
                <th width="5%">Account ID</th>
                <th>Username</th>
                <th>Fullname</th>
                <th>Email</th>
                <th>User Type</th>
                <th>Facility Name</th>

                <th>Gender</th>
                <th>Birthday</th>
                <th>Phone</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                //Except admin account
                if(!item.Username.Equals("admin"))
                    {

                <tr>
                    <td width="80px">@item.AccountID</td>
                    <td>@item.Username</td>
                    <td>@item.Fullname</td>
                    <td>@item.Email</td>
                    <td>@item.TypeName</td>
                    <td>@item.FacilityName</td>

                    <td>@item.Gender</td>
                    <td>@item.Birthday.ToString("dd/MM/yyyy")</td>
                    <td>@item.Phone</td>
                    <td>
                        @Html.ActionLink("Edit", "Edit", new { id = item.AccountID }, new {@class = "badge badge-light" }) |
                        @Html.ActionLink("Delete", "Delete", new { id = item.AccountID }, new {@class = "badge badge-btn2" })
                    </td>
                </tr>
                }
            }
        </tbody>
    </table>

}
else
{
    <p>No accounts available.</p>
}

