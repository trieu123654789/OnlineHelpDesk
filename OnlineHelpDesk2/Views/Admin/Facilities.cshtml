@model IEnumerable<OnlineHelpDesk2.Models.Facility>
@{
    ViewBag.Title = "Facilities";
    Layout = "~/Views/Shared/Admin_LayoutPage.cshtml";
}
<a href="@Url.Action("CreateFacility", "Admin")" class="badge badge-info">Create New Facility</a>
<br />
<br />
@if (Model.Any())
{
    <table class="table" id="myTable" style="font-size: 14px;">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FacilityName)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            //Except end-user account
            if (item.FacilityName != "None")
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FacilityName)
                    </td>
                    <td>
                        @Html.ActionLink("Edit", "EditFacility", new { id = item.FacilityID }, new { @class = "badge badge-light" }) |
                        @Html.ActionLink("Delete", "DeleteFacility", new { id = item.FacilityID }, new { @class = "badge badge-btn2" })
                    </td>
                </tr>
            }
        }

    </table>
}
else
{
    <p style="color: #000">No facilities available.</p>
}
